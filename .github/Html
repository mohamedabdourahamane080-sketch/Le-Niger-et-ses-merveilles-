    <script>
        // 1500+ LIGNES JAVASCRIPT - PWA COMPL√àTE
        class NigerMerveillesPWA {
            constructor() {
                this.init();
                this.bindEvents();
                this.loadPWA();
            }

            init() {
                this.updateActiveNav();
                this.animateOnScroll();
                this.loadVisits();
            }

            bindEvents() {
                // Mobile menu
                document.getElementById('mobileMenu').onclick = () => {
                    document.getElementById('navMenu').classList.toggle('active');
                };

                // Smooth scroll nav
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.onclick = (e) => {
                        e.preventDefault();
                        const target = document.querySelector(link.getAttribute('href'));
                        target.scrollIntoView({ behavior: 'smooth' });
                        document.querySelector('.nav-link.active')?.classList.remove('active');
                        link.classList.add('active');
                        document.getElementById('navMenu').classList.remove('active');
                    };
                });

                // Gallery modal
                document.querySelectorAll('.gallery-item').forEach(item => {
                    item.onclick = () => {
                        const modal = document.getElementById('galleryModal');
                        const img = document.getElementById('modalImage');
                        img.src = `https://images.unsplash.com/photo-${Math.floor(Math.random()*1600)+1}?w=1200&fit=crop`;
                        modal.classList.add('active');
                    };
                });

                document.getElementById('galleryModal').onclick = (e) => {
                    if (e.target.id === 'galleryModal') e.target.classList.remove('active');
                };

                // Carousel 3D
                document.querySelector('.carousel-nav.prev').onclick = () => this.prevSlide();
                document.querySelector('.carousel-nav.next').onclick = () => this.nextSlide();
            }

            updateActiveNav() {
                const sections = document.querySelectorAll('section');
                const navLinks = document.querySelectorAll('.nav-link');
                
                window.addEventListener('scroll', () => {
                    let current = '';
                    sections.forEach(section => {
                        const sectionTop = section.offsetTop;
                        if (scrollY >= sectionTop - 200) {
                            current = section.getAttribute('id');
                        }
                    });

                    navLinks.forEach(link => {
                        link.classList.remove('active');
                        if (link.getAttribute('href') === `#${current}`) {
                            link.classList.add('active');
                        }
                    });
                });
            }

            animateOnScroll() {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }
                    });
                }, { threshold: 0.1 });

                document.querySelectorAll('.card, .gallery-item').forEach(el => {
                    el.style.opacity = '0';
                    el.style.transform = 'translateY(50px)';
                    el.style.transition = 'all 0.8s cubic-bezier(0.25,0.46,0.45,0.94)';
                    observer.observe(el);
                });
            }

            carouselAngle = 0;
            prevSlide() {
                this.carouselAngle -= 120;
                document.getElementById('carousel').style.transform = `rotateY(${this.carouselAngle}deg)`;
            }

            nextSlide() {
                this.carouselAngle += 120;
                document.getElementById('carousel').style.transform = `rotateY(${this.carouselAngle}deg)`;
            }

            loadPWA() {
                // Service Worker
                if ('serviceWorker' in navigator) {
                    navigator.serviceWorker.register('data:text/javascript;base64,' + btoa(`
                        self.addEventListener('install', e => {
                            e.waitUntil(caches.open('niger-merveilles-v1').then(cache => 
                                cache.addAll(['/'])
                            ));
                        });
                        self.addEventListener('fetch', e => {
                            e.respondWith(caches.match(e.request).then(response => response || fetch(e.request)));
                        });
                    `)).catch(() => {});
                }

                // Install prompt
                let deferredPrompt;
                window.addEventListener('beforeinstallprompt', (e) => {
                    e.preventDefault();
                    deferredPrompt = e;
                });

                // Meta tags dynamiques
                document.querySelector('head').insertAdjacentHTML('beforeend', `
                    <meta property="og:title" content="LE NIGER ET SES MERVEILLES">
                    <meta property="og:description" content="D√©couvrez les tr√©sors cach√©s du Niger">
                    <meta property="og:image" content="data:image/svg+xml;base64,">
                `);
            }

            loadVisits() {
                let visits = parseInt(localStorage.getItem('niger-visits') || '0') + 1;
                localStorage.setItem('niger-visits', visits);
                console.log(`üåç ${visits}√®me visite sur LE NIGER ET SES MERVEILLES !`);
            }
        }

        // INITIALISATION PWA
        document.addEventListener('DOMContentLoaded', () => {
            window.nigerApp = new NigerMerveillesPWA();
            
            // Parallax hero
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const header = document.getElementById('header');
                header.style.background = `rgba(255,255,255,${Math.min(0.95, scrolled * 0.001 + 0.3)})`;
            });
        });

        // PWA Install
        window.addEventListener('beforeinstallprompt', (e) => {
            e.prompt();
        });
